// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  name String 
  last_name String? 
  telephone String?
  email String
  password String?
  bank String?
  pix String? 
  isAdmin Boolean @default(false)
  credits Decimal? @db.Decimal(9,2) @default(0) 
  house_profit Decimal? @db.Decimal(9,2) @default(0) 
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  solicitations Solicitation[]
  notifications Notifications[]
}

model Solicitation {
  id String @id @default(uuid())
  user   User @relation(fields: [userId], references: [id])
  value_solicitation Decimal @db.Decimal(9,2)
  userId String
  status  Status    @default(SOLICITADO)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  notifications Notifications[]
}

enum Status {
  PAGO
  SOLICITADO
  RECUSADO
}

model Notifications {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  solicitation Solicitation? @relation(fields: [solicitationId], references: [id])
  solicitationId String?
  visualized  Boolean @default(false)
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Roulletes{
  id String @id @default(uuid())
  nameCategory String
  price_roullete Decimal @db.Decimal(9,2)
  status  StatusRoullete    @default(INATIVA)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  quotas Quotas[]

}

enum StatusRoullete {
  ATIVA
  INATIVA
}

model Quotas{
  id String @id @default(uuid())
  roulleteId String
  roullete Roulletes? @relation(fields: [roulleteId], references: [id])
  valueQuota Decimal @db.Decimal(9,2)
  color String
  percentageQuota Decimal @db.Decimal(9,2)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}